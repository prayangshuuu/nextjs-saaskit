// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  emailVerified Boolean   @default(false)
  emailVerifiedAt DateTime?
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret String?  // Encrypted TOTP secret
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  roleId        String
  role          Role      @relation(fields: [roleId], references: [id])
  sessions      Session[]
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  subscriptions Subscription[]
  invoices      Invoice[]
  apiKeys       ApiKey[]
  organizationMembers OrganizationMember[]
  ownedOrganizations Organization[] @relation("OrganizationOwner")
  notifications Notification[]
  notificationPreference NotificationPreference?
  twoFactorRecoveryCodes TwoFactorRecoveryCode[]
  oauthAccounts OAuthAccount[]
  fileUploads FileUpload[]

  @@map("users")
}

// Role model
model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]
  permissions RolePermission[]

  @@map("roles")
}

// Permission model
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  resource    String   // e.g., "USERS", "SETTINGS", "BILLING", "CRUD"
  action      String   // e.g., "CREATE", "READ", "UPDATE", "DELETE", "MANAGE"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  roles       RolePermission[]

  @@map("permissions")
}

// Role-Permission junction table
model RolePermission {
  id           String     @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())

  // Relations
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

// Session model for JWT tracking
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("sessions")
}

// Refresh token model
model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// Password reset token model
model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("password_reset_tokens")
}

// Email verification token model
model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@map("email_verification_tokens")
}

// Two-Factor Authentication Recovery Codes
model TwoFactorRecoveryCode {
  id        String   @id @default(cuid())
  userId    String
  code      String   // Hashed recovery code
  used      Boolean  @default(false)
  usedAt    DateTime?
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([code])
  @@map("two_factor_recovery_codes")
}

// OAuth Account model for social login
model OAuthAccount {
  id            String   @id @default(cuid())
  userId        String
  provider      String   // "google", "github"
  providerId    String   // Provider's user ID
  email         String
  name          String?
  avatar         String?
  accessToken   String?  // Encrypted
  refreshToken   String?  // Encrypted
  expiresAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
  @@index([provider])
  @@map("oauth_accounts")
}

// File Upload model
model FileUpload {
  id            String   @id @default(cuid())
  userId        String
  organizationId String?
  filename      String
  originalName  String
  mimeType      String
  size          Int      // Size in bytes
  storagePath   String   // Path to file (local or S3 key)
  storageType   String   @default("local") // "local" or "s3"
  purpose       String   // "avatar", "logo", "document", etc.
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization  Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([organizationId])
  @@index([purpose])
  @@map("file_uploads")
}

// Enums
enum SubscriptionStatus {
  PENDING
  ACTIVE
  CANCELED
  EXPIRED
  PAST_DUE
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum PaymentProviderType {
  STRIPE
  BKASH
  SSLCOMMERZ
  PIPRAPAY
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum OrganizationRoleType {
  OWNER
  ADMIN
  MEMBER
}

// Plan model
model Plan {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  interval    PlanInterval
  features    Json?    // JSON array of feature strings
  limits      Json?    // Plan limits: { "api_requests": 10000, "active_users": 50, "storage_bytes": 1073741824 }
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  subscriptions Subscription[]

  @@map("plans")
}

// Subscription model
model Subscription {
  id                String             @id @default(cuid())
  userId            String
  organizationId   String?            // Multi-tenant: org-level subscriptions
  planId            String
  status            SubscriptionStatus  @default(PENDING)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean           @default(false)
  canceledAt         DateTime?
  providerSubscriptionId String?        // External provider subscription ID
  providerType       PaymentProviderType?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  // Relations
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization      Organization?      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan              Plan               @relation(fields: [planId], references: [id])
  invoices          Invoice[]

  @@index([userId])
  @@index([organizationId])
  @@index([planId])
  @@index([status])
  @@index([providerSubscriptionId])
  @@map("subscriptions")
}

// Invoice model
model Invoice {
  id                String          @id @default(cuid())
  userId            String
  organizationId   String?          // Multi-tenant: org-level invoices
  subscriptionId   String?
  amount           Decimal          @db.Decimal(10, 2)
  currency         String           @default("USD")
  status           InvoiceStatus    @default(DRAFT)
  providerInvoiceId String?         // External provider invoice ID
  providerType     PaymentProviderType?
  paidAt           DateTime?
  dueDate          DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  // Relations
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization     Organization?   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  subscription     Subscription?    @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([organizationId])
  @@index([subscriptionId])
  @@index([status])
  @@index([providerInvoiceId])
  @@map("invoices")
}

// PaymentProvider model
model PaymentProvider {
  id          String              @id @default(cuid())
  type        PaymentProviderType @unique
  enabled     Boolean             @default(false)
  testMode    Boolean             @default(true)
  apiKey      String?             // Encrypted in application layer
  apiSecret   String?             // Encrypted in application layer
  webhookSecret String?            // Encrypted in application layer
  config      Json?                // Provider-specific configuration
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@map("payment_providers")
}

// API Key model
model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  organizationId String? // Multi-tenant: org-scoped API keys
  name        String
  key         String   @unique
  keyHash     String   // Hashed version for verification
  scopes      String[] // Array of permission scopes
  rateLimit   Int      @default(100) // Requests per minute
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([organizationId])
  @@index([key])
  @@map("api_keys")
}

// Organization model
model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  ownerId     String   // User who owns the organization
  metadata    Json?    // Additional org data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  owner       User     @relation("OrganizationOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     OrganizationMember[]
  subscriptions Subscription[]
  invoices    Invoice[]
  apiKeys     ApiKey[]
  usageRecords UsageRecord[]
  auditLogs   AuditLog[]
  smtpConfig  SmtpConfig?
  emailTemplates EmailTemplate[]
  notifications Notification[]
  systemSettings SystemSetting[]
  featureFlags FeatureFlag[]
  systemModules SystemModule[]
  fileUploads   FileUpload[]

  @@index([ownerId])
  @@index([slug])
  @@map("organizations")
}

// OrganizationMember model
model OrganizationMember {
  id             String              @id @default(cuid())
  organizationId String
  userId         String
  role           OrganizationRoleType @default(MEMBER)
  invitedBy      String?             // User who invited this member
  joinedAt       DateTime            @default(now())
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  // Relations
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
  @@map("organization_members")
}

// UsageRecord model for tracking usage metrics
model UsageRecord {
  id             String   @id @default(cuid())
  organizationId String
  metric         String   // e.g., "api_requests", "active_users", "feature_usage"
  value          Decimal  @db.Decimal(10, 2)
  metadata       Json?    // Additional context (endpoint, feature name, etc.)
  periodStart    DateTime // Billing period start
  periodEnd      DateTime // Billing period end
  createdAt      DateTime @default(now())

  // Relations
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([metric])
  @@index([periodStart, periodEnd])
  @@unique([organizationId, metric, periodStart])
  @@map("usage_records")
}

// AuditLog model for compliance and security
model AuditLog {
  id             String   @id @default(cuid())
  actorId        String   // User who performed the action
  organizationId String?  // Organization context (if applicable)
  action         String   // e.g., "user.created", "subscription.canceled"
  entity         String   // e.g., "User", "Subscription", "Organization"
  entityId       String?  // ID of the affected entity
  metadata       Json?    // Additional context (IP, user agent, etc.)
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([actorId])
  @@index([organizationId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
  @@map("audit_logs")
}

// SmtpConfig model for email configuration
model SmtpConfig {
  id             String   @id @default(cuid())
  organizationId String?  // null = global fallback
  host           String
  port           Int      @default(587)
  username       String
  password       String   // Encrypted in application layer
  fromName       String
  fromEmail      String
  secure         Boolean  @default(false) // true for port 465
  enabled        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId]) // One config per org (null for global)
  @@index([organizationId])
  @@index([enabled])
  @@map("smtp_configs")
}

// EmailTemplate model for email templates
model EmailTemplate {
  id             String   @id @default(cuid())
  key            String   // e.g., "welcome", "reset-password", "invoice-paid"
  subject        String
  htmlBody       String
  textBody       String?
  enabled        Boolean  @default(true)
  organizationId String?  // null = global template
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, key]) // One template per key per org
  @@index([organizationId])
  @@index([key])
  @@index([enabled])
  @@map("email_templates")
}

// Notification model for in-app and email notifications
model Notification {
  id             String   @id @default(cuid())
  userId         String
  organizationId String?
  type           String   // e.g., "info", "success", "warning", "error"
  title          String
  message        String
  metadata       Json?    // Additional context
  read           Boolean  @default(false)
  readAt         DateTime?
  emailSent      Boolean  @default(false)
  createdAt      DateTime @default(now())

  // Relations
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([organizationId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

// NotificationPreference model for user notification preferences
model NotificationPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  emailEnabled   Boolean  @default(true)
  inAppEnabled   Boolean  @default(true)
  preferences    Json?    // Channel-specific preferences
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notification_preferences")
}

// SystemSetting model for runtime configuration
model SystemSetting {
  id             String   @id @default(cuid())
  key            String   // e.g., "app.name", "billing.enabled"
  value          Json     // Setting value (type-safe based on type field)
  type           String   // "string", "number", "boolean", "json"
  isSecret       Boolean  @default(false) // Encrypted in application layer
  organizationId String?  // null = global setting
  description    String?  // Human-readable description
  updatedAt      DateTime @updatedAt
  updatedBy      String?  // User who last updated

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, key]) // One setting per key per org
  @@index([organizationId])
  @@index([key])
  @@map("system_settings")
}

// FeatureFlag model for feature toggles
model FeatureFlag {
  id             String   @id @default(cuid())
  key            String   // e.g., "billing.enabled", "api.access"
  enabled        Boolean  @default(false)
  organizationId String?  // null = global flag
  description    String?
  updatedAt      DateTime @updatedAt
  updatedBy      String?

  // Relations
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, key]) // One flag per key per org
  @@index([organizationId])
  @@index([key])
  @@index([enabled])
  @@map("feature_flags")
}

// TelemetryEvent model for optional, opt-in telemetry
model TelemetryEvent {
  id        String   @id @default(cuid())
  event     String   // Event name (e.g., "feature.used", "error.occurred")
  metadata  Json?    // Event metadata (no PII)
  version   String?  // App version
  timestamp DateTime @default(now())

  @@index([event])
  @@index([timestamp])
  @@map("telemetry_events")
}

// SystemModule model for module-driven platform control
enum ModuleScope {
  GLOBAL   // System-wide module (e.g., landing, pricing)
  PUBLIC   // Public-facing module (e.g., auth, docs)
  AUTH     // Authentication-related module
  ADMIN    // Admin-only module
}

model SystemModule {
  id          String      @id @default(cuid())
  key         String      @unique // e.g., "landing", "pricing", "billing", "api", "auth", "docs"
  enabled     Boolean     @default(true)
  description String?     // Human-readable description
  scope       ModuleScope @default(GLOBAL)
  organizationId String?  // null = global module, otherwise org-specific override
  updatedAt   DateTime    @updatedAt
  updatedBy   String?     // User who last updated

  // Relations
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, key]) // One module per key per org
  @@index([key])
  @@index([enabled])
  @@index([scope])
  @@index([organizationId])
  @@map("system_modules")
}
